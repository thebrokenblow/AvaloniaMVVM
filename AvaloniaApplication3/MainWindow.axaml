<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication3.MainWindow"
        Title="AvaloniaApplication3">
    <Design.DataContext>
        <viewModel:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel Margin="20" Spacing="10">
        <TextBox Text="{Binding Number1}" 
                 Watermark="Enter first number"/>
        <TextBox Text="{Binding Number2}" 
                 Watermark="Enter second number"/>
        
        <Button Content="Calculate" Command="{Binding Calculate}"/>
        
        <TextBlock Text="{Binding Result}"
                   FontSize="16" FontWeight="Bold"
                   HorizontalAlignment="Center"/>
    </StackPanel>
</Window>